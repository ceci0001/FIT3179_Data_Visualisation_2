{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 20 Countries With the Highest CO2 Emissions",
    "width": 600,
    "height": 400,
    "data": {
        "url": "./data/world_clean.csv", 
        "format": {"parse": {"CO2_Emissions": "number"}}
    },
    "transform": [
    {"filter": "isValid(datum.CO2_Emissions)"},
    {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "CO2_Emissions", "order": "descending"}]},
    {"filter": "datum.rank <= 20"}],
    "mark": {
        "type": "area", 
        "line": {"color": "#fab4d5"}, 
        "color": {
          "x1": 1,
          "y1": 1,
          "x2": 1,
          "y2": 0,
          "gradient": "linear",
          "stops": [
            {
              "offset": 0,
              "color": "#bfcaf2"
            },
            {
              "offset": 1,
              "color": "#fab4d5"
            }
          ]
        }, 
        "strokeWidth": 3, 
        "point": {"fill": "#bfcaf2", "size": 75} 
        }, 
        "params": [
          {
            "name": "Country_Highlight", 
            "select": {"type": "point", "fields": ["Country"]}, 
            "bind": "scales"
          }
        ], 
    "encoding": {
      "x": {
        "field": "Country",
        "type": "nominal"
      },
      "y": {
        "field": "CO2_Emissions",
        "type": "quantitative"
      }, 
      "tooltip": [
        {"field": "Country", "type": "nominal", "title":
        "Country"},
        {"field": "CO2_Emissions", "type": "quantitative", "title": "CO2 Emission"}, 
        {"field": "Population", "type": "quantitative", "title": "Population"}
    ], 
    "opacity": {
      "condition": {"param": "Country_Highlight", "value": 0.7},
      "value": 0.2
  }
    }
  }