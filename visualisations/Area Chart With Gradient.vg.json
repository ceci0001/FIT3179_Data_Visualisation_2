{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "width": 600,
    "height": 400,
    "data": {
        "url": "./data/world_clean.csv", 
        "format": {"parse": {"CO2_Emissions": "number", 
                              "Country": "string"}}
    },
    "transform": [
    {"filter": "isValid(datum.CO2_Emissions)"},
    {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "CO2_Emissions", "order": "descending"}]},
    {"filter": "datum.rank <= 20"}], 
    "encoding": {
      "x": {
        "field": "Country",
        "type": "nominal"
      },
      "y": {
        "field": "CO2_Emissions",
        "type": "quantitative", 
        "title": "CO2 Emissions"
      }, 
      "opacity": {
        "condition": {"param": "Country_Highlight", "value": 0.7},
        "value": 0.2
      }
    }, 
    "layer": [
    {"mark": {
        "type": "area", 
        "line": {"color": "#DE4968"}, 
        "color": {
          "x1": 1,
          "y1": 1,
          "x2": 1,
          "y2": 0,
          "gradient": "linear",
          "stops": [
            {
              "offset": 0,
              "color": "#3B0F70"
            },
            {
              "offset": 1,
              "color": "#FECE91"
            }
          ]
        }, 
        "strokeWidth": 3, 
        "point": {"fill": "#8C2981", "size": 75, "opacity": 0.7} 
        }, 
        "params": [
          {
            "name": "Country_Highlight", 
            "select": {"type": "point", "fields": ["Country"]}, 
            "bind": "scales"
          }
        ], 
        "encoding": {
          "tooltip": [
            {"field": "Country", "type": "nominal", "title":
            "Country"},
            {"field": "CO2_Emissions", "type": "quantitative", "title": "CO2 Emission"}, 
            {"field": "Population", "type": "quantitative", "title": "Population"}
          ] 
        }
  }, 
  {
    "mark": {
      "type": "text",
      "align": "left",
      "baseline": "middle",
      "dx": 5,
      "fontSize": 12,
      "fontStyle": "italic"
    },
    "encoding": {
      "text": {"field": "CO2_Emissions", "type": "quantitative"},
      "color": {"value": "black"},
      "opacity": {
        "condition": {
          "test": "datum['Country'] == 'Comoros' || datum['Country'] == 'Eritrea' || datum['Country'] == 'Somalia'",
          "value": 1
        },
        "value": 0
      }
    }
  }
 ]
}