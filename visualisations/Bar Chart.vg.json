{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400, 
    "background": "transparent", 
    "transform": [
        {"filter": "isValid(datum.CO2_Emissions)"},
        {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "CO2_Emissions", "order": "descending"}]},
        {"filter": "datum.rank <= 20"}, 
        {"calculate": "'China has the highest CO2 emissions'", "as": "Final1"}, 
        {"calculate": "'Poland has the lowest CO2 emissions'", "as": "Final2"}
    ],
    "data": {
        "url": "./data/world_clean.csv", 
        "format": {"parse": {"CO2_Emissions": "number", 
                              "Country": "string"}}
    }, 
  "encoding": {
    "x": {"field": "Country", "type": "nominal", "axis": {"labelAngle": 45}},
    "y": {"field": "CO2_Emissions", "type": "quantitative", "title": "CO2 Emissions"}, 
    "color": {
      "field": "Country", 
      "scale": {
          "scheme": "magma"
      }, 
      "sort": {
          "field": "CO2_Emissions"
      }, 
      "legend": {
        "fillColor": "lightgray", 
        "padding": 5
      }
    }
  }, 
    "layer": [
      {
        "mark": "bar", 
        "params": [
          {
            "name": "Country_Highlight", 
            "select": {"type": "point", "fields": ["Country"]}, 
            "bind": "legend"
          }
        ], 
        "encoding": {
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"}, 
            {"field": "CO2_Emissions", "type": "quantitative", "title": "CO2 Emissions"}
          ], 
          "opacity": {
            "condition": {"param": "Country_Highlight", "value": 1},
            "value": 0.2
          }
        }
      }, 
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 5,
          "fontSize": 12,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Final1"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China'",
              "value": 1
            },
            "value": 0
          }
        }
      }, 
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 1, 
          "dy": -10, 
          "fontSize": 12,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Final2"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Poland'",
              "value": 1
            },
            "value": 0
          }
        }
      }

    ]
    
    
  }