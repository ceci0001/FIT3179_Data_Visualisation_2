{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Horizontally concatenated charts that show different types of discretizing scales.",
    "data": {
      "url": "./data/world_clean.csv", 
      "format": {"parse": {"Agricultural_Land": "number", 
                            "Forested_Area": "number", 
                            "Land_Area_Km2": "number"}}
    }, 
    "background": "transparent", 
    "hconcat": [
      {"transform": [
            {"filter": "isValid(datum.Agricultural_Land)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Agricultural_Land", "order": "descending"}]},
            {"filter": "datum.rank <= 20"}, 
            {"calculate": "datum.Country + '   ' + datum.Agricultural_Land + '%'", "as": "Final"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Final",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null, 
              "labelLimit": 200
            }
          },
          "size": {
            "field": "Agricultural_Land",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "range": [80, 160, 240, 320, 400]
            }
          },
          "color": {
            "field": "Agricultural_Land",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "scheme": "magma"
            },
            "legend": {
              "format": "d",
              "title": "Quantile"
            }
          }, 
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"}, 
            {"field": "Agricultural_Land", "type": "quantitative", "title": "Agricultural Land (In %)"}
          ]
        }
      }, 
      {"mark": {
        "type": "rect"
      }, 
        "encoding": {
          "x": {"value": 0},
          "x2": {"value": 5}, 
          "y": {"value": 0}, 
          "y2": {"value": 5}, 
          "color": {"value": "white"}
        }}, 
        {"mark": {
          "type": "rect"
        }, 
          "encoding": {
            "x": {"value": 0},
            "x2": {"value": 5}, 
            "y": {"value": 0},  
            "y2": {"value": 5}, 
            "color": {"value": "white"}
          }}, 
      {
        "transform": [
            {"filter": "isValid(datum.Forested_Area)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Forested_Area", "order": "descending"}]},
            {"filter": "datum.rank <= 20"}, 
            {"calculate": "datum.Country + '   ' + datum.Forested_Area + '%'", "as": "Final"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Final",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null, 
              "labelLimit": 200
            }
          },
          "size": {
            "field": "Forested_Area",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "range": [80, 160, 240, 320, 400]
            }
          },
          "color": {
            "field": "Forested_Area",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "scheme": "magma"
            },
            "legend": {
              "format": "d",
              "title": "Quantile"
            }
          }, 
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"}, 
            {"field": "Forested_Area", "type": "quantitative", "title": "Forested Area (In %)"}
          ]
        }
      },
      {"mark": {
        "type": "rect"
      }, 
        "encoding": {
          "x": {"value": 0},
          "x2": {"value": 5}, 
          "y": {"value": 0}, 
          "y2": {"value": 5}, 
          "color": {"value": "white"}
        }},
        {"mark": {
          "type": "rect"
        }, 
          "encoding": {
            "x": {"value": 0},
            "x2": {"value": 5}, 
            "y": {"value": 0}, 
            "y2": {"value": 5}, 
            "color": {"value": "white"}
          }}, 
      {
        "transform": [
            {"filter": "isValid(datum.Land_Area_Km2)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Land_Area_Km2", "order": "descending"}]},
            {"filter": "datum.rank <= 20"}, 
            {"calculate": "datum.Country + '   ' + datum.Land_Area_Km2", "as": "Final"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Final",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null, 
              "labelLimit": 200
            }
          },
          "size": {
            "field": "Land_Area_Km2",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "range": [80, 160, 240, 320, 400]
            }
          },
          "color": {
            "field": "Land_Area_Km2",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "scheme": "magma"
            },
            "legend": {
              "format": "d",
              "title": "Quantile"
            }
          }, 
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"}, 
            {"field": "Land_Area_Km2", "type": "quantitative", "title": "Total Land Area (In km^2)"}
          ]
        }
      }
    ],
    "resolve": {
      "scale": {
        "color": "independent",
        "size": "independent"
      }
    }, 
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }