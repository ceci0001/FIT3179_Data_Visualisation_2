{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Horizontally concatenated charts that show different types of discretizing scales.",
    "data": {
      "url": "./data/world_clean.csv", 
      "format": {"parse": {"Agricultural_Land": "number", 
                            "Forested_Area": "number", 
                            "Land_Area_Km2": "number"}}
    }, 
    "hconcat": [
      {"transform": [
            {"filter": "isValid(datum.Agricultural_Land)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Agricultural_Land", "order": "descending"}]},
            {"filter": "datum.rank <= 23"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Agricultural_Land",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null
            }
          },
          "size": {
            "field": "Agricultural_Land",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "range": [80, 160, 240, 320, 400]
            }
          },
          "color": {
            "field": "Agricultural_Land",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "scheme": "magma"
            },
            "legend": {
              "format": "d",
              "title": "Quantile"
            }
          }
        }
      },
      {
        "transform": [
            {"filter": "isValid(datum.Agricultural_Land)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Agricultural_Land", "order": "descending"}]},
            {"filter": "datum.rank <= 23"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Agricultural_Land",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null
            }
          },
          "size": {
            "field": "Agricultural_Land",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [70, 80],
              "range": [80, 200, 320]
            }
          },
          "color": {
            "field": "Agricultural_Land",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [70, 80],
              "scheme": "magma"
            },
            "legend": {
              "title": "Threshold"
            }
          }
        }
      }, 
      {"mark": {
        "type": "rect"
      }, 
        "encoding": {
          "x": {"value": 0},
          "x2": {"value": 20}, 
          "y": {"value": 0}, 
          "y2": {"value": 20}, 
          "color": {"value": "white"}
        }}, 
      {
        "transform": [
            {"filter": "isValid(datum.Forested_Area)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Forested_Area", "order": "descending"}]},
            {"filter": "datum.rank <= 20"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Forested_Area",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null
            }
          },
          "size": {
            "field": "Forested_Area",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "range": [80, 160, 240, 320, 400]
            }
          },
          "color": {
            "field": "Forested_Area",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "scheme": "magma"
            },
            "legend": {
              "format": "d",
              "title": "Quantile"
            }
          }
        }
      },
      {
        "transform": [
            {"filter": "isValid(datum.Forested_Area)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Forested_Area", "order": "descending"}]},
            {"filter": "datum.rank <= 20"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Forested_Area",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null
            }
          },
          "size": {
            "field": "Forested_Area",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [60, 70, 80, 90],
              "range": [80, 160, 240, 320]
            }
          },
          "color": {
            "field": "Forested_Area",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [60, 70, 80, 90],
              "scheme": "magma"
            },
            "legend": {
              "title": "Threshold"
            }
          }
        }
      }, 
      {"mark": {
        "type": "rect"
      }, 
        "encoding": {
          "x": {"value": 0},
          "x2": {"value": 20}, 
          "y": {"value": 0}, 
          "y2": {"value": 20}, 
          "color": {"value": "white"}
        }},
      {
        "transform": [
            {"filter": "isValid(datum.Land_Area_Km2)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Land_Area_Km2", "order": "descending"}]},
            {"filter": "datum.rank <= 20"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Land_Area_Km2",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null
            }
          },
          "size": {
            "field": "Land_Area_Km2",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "range": [80, 160, 240, 320, 400]
            }
          },
          "color": {
            "field": "Land_Area_Km2",
            "type": "quantitative",
            "scale": {
              "type": "quantile",
              "scheme": "magma"
            },
            "legend": {
              "format": "d",
              "title": "Quantile"
            }
          }
        }
      },
      {
        "transform": [
            {"filter": "isValid(datum.Land_Area_Km2)"},
            {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Land_Area_Km2", "order": "descending"}]},
            {"filter": "datum.rank <= 20"}
        ], 
        "mark": "circle",
        "encoding": {
          "y": {
            "field": "Land_Area_Km2",
            "type": "nominal",
            "sort": null,
            "axis": {
              "ticks": false,
              "domain": false,
              "title": null
            }
          },
          "size": {
            "field": "Land_Area_Km2",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [2000000, 4000000, 6000000 ,8000000, 10000000, 17000000],
              "range": [80, 130, 180, 230, 280, 330, 380]
            }
          },
          "color": {
            "field": "Land_Area_Km2",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [2000000, 4000000, 6000000 ,8000000, 10000000, 17000000],
              "scheme": "magma"
            },
            "legend": {
              "title": "Threshold"
            }
          }
        }
      }
    ],
    "resolve": {
      "scale": {
        "color": "independent",
        "size": "independent"
      }
    }, 
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }