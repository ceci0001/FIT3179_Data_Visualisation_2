{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Horizontally concatenated charts that show different types of discretizing scales.",
  "data": {
    "url": "../data/world_clean.csv", 
    "format": {"parse": {"Agricultural_Land": "number"}}
  }, 
  "transform": [
    {"filter": "isValid(datum.Agricultural_Land)"},
    {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "Agricultural_Land", "order": "descending"}]},
    {"filter": "datum.rank <= 20"}
  ], 
  "hconcat": [
    {
      "mark": "circle",
      "encoding": {
        "y": {
          "field": "Agricultural_Land",
          "type": "nominal",
          "sort": null,
          "axis": {
            "ticks": false,
            "domain": false,
            "title": null
          }
        },
        "size": {
          "field": "Agricultural_Land",
          "type": "quantitative",
          "scale": {
            "type": "quantize"
          }
        },
        "color": {
          "field": "Agricultural_Land",
          "type": "quantitative",
          "scale": {
            "type": "quantize",
            "zero": true
          },
          "legend": {
            "title": "Quantize"
          }
        }
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "y": {
          "field": "Agricultural_Land",
          "type": "nominal",
          "sort": null,
          "axis": {
            "ticks": false,
            "domain": false,
            "title": null
          }
        },
        "size": {
          "field": "Agricultural_Land",
          "type": "quantitative",
          "scale": {
            "type": "quantile",
            "range": [80, 160, 240, 320, 400]
          }
        },
        "color": {
          "field": "Agricultural_Land",
          "type": "quantitative",
          "scale": {
            "type": "quantile",
            "scheme": "magma"
          },
          "legend": {
            "format": "d",
            "title": "Quantile"
          }
        }
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "y": {
          "field": "Agricultural_Land",
          "type": "nominal",
          "sort": null,
          "axis": {
            "ticks": false,
            "domain": false,
            "title": null
          }
        },
        "size": {
          "field": "Agricultural_Land",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [70, 80],
            "range": [80, 200, 320]
          }
        },
        "color": {
          "field": "Agricultural_Land",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [70, 80],
            "scheme": "viridis"
          },
          "legend": {
            "title": "Threshold"
          }
        }
      }
    }
  ],
  "resolve": {
    "scale": {
      "color": "independent",
      "size": "independent"
    }
  }
}